---
interface Props {
  isHome?: boolean;
}

const {
  isHome = true
} = Astro.props;
---

<div class={isHome ? '' : 'compact-banner'} id="banner" transition:persist>
	<div class="image-wrapper" id="banner-bg"></div>
	<div class="image-wrapper" id="banner-overlay" data-speed="-2.5" data-type="background"></div>
	<div class="image-wrapper" id="banner-text" ontouchstart="this.classList.toggle('hover');"><div class="flipboard"><div class="front"></div><div class="back"></div></div></div>
	<div class="row mx-auto px-4 sm:max-w-screen-xl sm:px-8">
		<div class="relative grid grid-cols-1 items-center sm:grid-cols-12">
			<div class="column sm:col-span-3">
				<img src="/images/logo-top.png" alt="Terminal 2" id="logo-top" />
			</div>
			<div class="column sm:col-span-3">
			</div>
			<div class="column sm:col-span-3">
				<p>Design and code</p>
				<p>for web, mobile, and print</p>
			</div>
			<div class="column sm:col-span-3">
				<p><a class="email-link" href="mailto:hi@nospam.tianheyang.com">Message me&ensp;🡥</a></p>
				<p><a href="http://www.linkedin.com/pub/tianhe-yang/22/943/8b4" target="_blank" rel=”noreferrer”>Connect on LI&ensp;🡥</a></p>
			</div>
		</div>
	</div>
</div>
