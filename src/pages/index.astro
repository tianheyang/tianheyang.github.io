---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
const allProjects = await getCollection("projects");
allProjects.sort((a, b) => b.data.year - a.data.year);
---

<BaseLayout>
  <div class="column sm:col-span-6">
    <div class="section active" id="web">
      <header>
        <h1>The journey is the reward</h1>
        <p>Just as transit hubs efficiently move people and cargo, I believe that websites and apps should be carefully crafted in order to seamlessly transport information and data.</p>
      </header>
      <p>I specialize in creating delightful products for agile teams that value quality and collaboration. Trusted since 2010 to help startups transform their innovated ideas into MVPs. Let's craft your next digital journey together.</p>
      <div class="showcase">
        {allProjects.map((project) => (
          <div class="preview">
            <a href={`/projects/${project.slug}/`}>
              <span class="preview-thumbnail" style={`background-image:url(${project.data.thumbnailUrl})`}></span>
              <span class="flex justify-between">
                <span class="title">{project.data.title}</span>
                <span class="text-mid-gray">{project.data.year}</span>
              </span>
              <span class="description">{project.data.roles[0]}</span>
            </a>
          </div>
        ))}
        <div class="float-fix"></div>
      </div>
    </div>
    <div class="section" id="print">
      <header>
        <h1>Print Work</h1>
      </header>
      <div class="showcase lightbox-gallery">
        <div class="preview">
          <a href="images/print/admerica.png" data-caption="Full-page magazine print ad. (8.5x11in)">
            <span class="preview-thumbnail" style="background-image:url('/images/print/admerica-thumb.png')"></span>
            <span class="title">
              Print Advertisement
            </span>
            <span class="description">
              For industry publication
            </span>
          </a>
        </div>
        <div class="preview">
          <a href="images/print/holiday-meetup.png" data-caption="Event flyer for holiday meetup/recruiting event.">
            <span class="preview-thumbnail" style="background-image:url('/images/print/holiday-meetup-thumb.png')"></span>
            <span class="title">
              Event Announcement
            </span>
            <span class="description">
              Flyer
            </span>
          </a>
        </div>
        <div class="preview">
          <a href="http://farm8.staticflickr.com/7233/7178810665_219b931da2_b.jpg" data-caption="Invitation sent out to company partners to an international kitchen and bath trade show. (8.5x11in)">
            <span class="preview-thumbnail" style="background-image:url('/images/print/designelement-kbis-flyer-thumb.jpg')"></span>
            <span class="title">
              Exhibition Announcement
            </span>
            <span class="description">
              Flyer
            </span>
          </a>
        </div>
        <div class="preview">
          <a href="http://farm6.staticflickr.com/5459/7393608248_476b3ee42b_o.png" data-caption="Sample of a series of countertop signs for showroom/tradeshow display models.">
            <span class="preview-thumbnail" style="background-image:url('/images/print/designelement-kbis-sign-thumb.jpg')"></span>
            <span class="title">
              Product Overview
            </span>
            <span class="description">
              Specifications reference
            </span>
          </a>
        </div>
        <div class="preview">
          <a href="http://farm8.staticflickr.com/7230/7182911429_93eda6eae6_b.jpg" data-caption="Flyer advertising for a German language course.">
            <span class="preview-thumbnail" style="background-image:url('/images/print/deutsch-sprache-thumb.jpg')"></span>
            <span class="title">
              German Language Course
            </span>
            <span class="description">
              Flyer
            </span>
          </a>
        </div>
        <div class="preview">
          <a href="http://farm6.staticflickr.com/5441/7368143868_d85d57c261_b.jpg" data-caption="Flyer for a colloquium at Kyushu University.">
            <span class="preview-thumbnail" style="background-image:url('/images/print/kyudai-ietoningen-thumb.jpg')"></span>
            <span class="title">
              Conference Announcement
            </span>
            <span class="description">
              Flyer
            </span>
          </a>
        </div>
        <div class="float-fix"></div>
      </div>
    </div>
  </div>
  <div class="column sidebar sm:col-span-3" id="profile-summary-twitter-feed">
    <div class="section web active" id="profile-summary">
      <h2>Profile</h2>
      <img src="images/profile.jpg" alt="Profile Picture" id="profile-pic" />
      <dl id="profile-list">
        <dd>Tianhe Yang</dd>
        <dt>Location</dt>
        <dd>Bellingham, WA</dd>
        <dt>Connect</dt>
        <dd>
          <a class="email-link" href="mailto:hi@nospam.tianheyang.com">Email&ensp;ðŸ¡¥</a><br/>
          <a href="https://www.linkedin.com/in/tianhe-yang-8b494322/" target="_blank">LinkedIn&ensp;ðŸ¡¥</a>
        </dd>
      </dl>
    </div>
  </div>
</BaseLayout>

